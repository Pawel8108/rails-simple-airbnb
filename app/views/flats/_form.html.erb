<%= simple_form_for(@flat) do |f| %>
  <% if @flat.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @flat.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row" style="margin: 2px;">
    <%= f.label :name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-8">
      <%= f.input_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row" style="margin: 2px;">
    <%= f.label :address, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-8">
      <%= f.input_field :address, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row" style="margin: 2px;">
    <%= f.label :description, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-8">
      <%= f.input_field :description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-inputs form-inline">
    <div class="form-group row" style="margin: 2px;">
      <%= f.label :price_per_night, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-8">
        <%= f.input_field :price_per_night, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row" style="margin: 2px;">
      <%= f.label :guests_number, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-8">
        <%= f.input_field :number_of_guests, class: 'form-control' %>
      </div>
    </div>
  </div>

 <div class="form-group row" style="margin: 2px;">
    <div class="col-sm-8">
      <%= f.button :submit, class: 'btn btn-success shadow' do %>
        <i class="fas fa-check"></i>
      <% end %>
    </div>
  </div>
<% end %>
