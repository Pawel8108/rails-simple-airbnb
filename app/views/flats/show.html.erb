<div class="container">
  <div class="row mb-4 mt-4">
    <div class="col-md-6">
      <div class="card shadow" style="width: 100%; background-color: #e9ecef; border: none; border-radius: 5px;">
        <div class="card-head p-3 mb-3" style="background-color: #e9ecef; border-top-left-radius: 5px; border-top-right-radius: 5px;">
          <h1 class="card-title"><strong><%= @flat.name %></strong></h1>
          <p class="card-text"><u><%= @flat.address %></u></p>
        </div>
      </div>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col-md-6">
      <div class="card shadow" style="width: 100%; background-color: #f8f9fa; border: none; border-radius: 5px;">
        <div class="card-info p-3">
          <h2 class="card-title"><strong>More about this flat...</strong></h2>
          <p class="card-text" style="color: #888;"><%= @flat.description %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col-md-6">
      <div class="card shadow" style="width: 100%; background-color: #f8f9fa; border: none; border-radius: 5px;">
        <div class="card-detail p-3">
          <h2 class="card-title"><strong>Details</strong></h2>
          <i class="fas fa-euro-sign" style="margin-right: 20px;"><%= @flat.price_per_night %></i>
          <i class="fas fa-people-roof" style="margin-left: 20px;"><%= @flat.number_of_guests %></i>
        </div>
        <div class="card-detail p-3">
          <%= link_to '<i class="fas fa-edit"></i> Edit'.html_safe, edit_flat_path(@flat), class: 'btn btn-warning shadow' %>
          <%= link_to '<i class="fas fa-trash-alt"></i> Delete'.html_safe, @flat, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger shadow' %>
        </div>
      </div>
    </div>
  </div>
</div>
